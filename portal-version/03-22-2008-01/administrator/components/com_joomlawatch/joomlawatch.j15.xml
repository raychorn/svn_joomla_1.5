	<install>
		<queries>
			<query>
				DROP TABLE IF EXISTS `#__joomlawatch`;
			</query>

			<query>
				CREATE TABLE `#__joomlawatch` (
				`id` int auto_increment primary key,
				`ip` varchar(255) default NULL,
				`country` varchar(2) default NULL,
				`browser` varchar(255) default NULL
				);
			</query>

			<query>
				alter table `#__joomlawatch` add INDEX (`ip`);
			</query>

			<query>
				alter table `#__joomlawatch` add INDEX (`browser`);
			</query>

			<query>
				DROP TABLE IF EXISTS `#__joomlawatch_config`;
			</query>


			<query>
				CREATE TABLE `#__joomlawatch_config` (
				`id` int auto_increment primary key,				
				`name` varchar(255) default NULL,
				`value` int default NULL
				);
			</query>
			
			<query>
				alter table `#__joomlawatch_config` add INDEX (`name`);
			</query>


			<query>
				DROP TABLE IF EXISTS `#__joomlawatch_info`;
			</query>

			<query>
				CREATE TABLE `#__joomlawatch_info` (
				`id` int auto_increment primary key,
				`group` varchar(255) default NULL,
				`date` varchar(255) default NULL,
				`name` varchar(255) default NULL,
				`value` int default NULL
				);
			</query>

			<query>
				alter table `#__joomlawatch_info` add INDEX (`group`);
			</query>

			<query>
				alter table `#__joomlawatch_info` add INDEX (`name`);
			</query>

			<query>
				alter table `#__joomlawatch_info` add INDEX (`date`);
			</query>

			<query>
				DROP TABLE IF EXISTS `#__joomlawatch_ip2c`;
			</query>

			<query>
				CREATE TABLE `#__joomlawatch_ip2c` (
				`start` int(10) unsigned NOT NULL default '0',
				`end` int(10) unsigned NOT NULL default '0',
				`a2` char(2) NOT NULL default '',
				`a3` char(3) NOT NULL default '',
				`country` varchar(100) NOT NULL default ''
				);
			</query>

			<query>
				alter table `#__joomlawatch_ip2c` add PRIMARY KEY  (`start`,`end`);
			</query>

			<query>
				DROP TABLE IF EXISTS `#__joomlawatch_uri`;
			</query>


			<query>
				CREATE TABLE `#__joomlawatch_uri` (
				`id` int auto_increment primary key,
				`fk` int default NULL,
				`timestamp` int default NULL,
				`uri` varchar(255) default NULL,
				`title` varchar(255) default NULL
				);
			</query>

			<query>
				ALTER TABLE `#__joomlawatch_uri` ADD INDEX ( `timestamp` );
			</query>

			<query>
				DROP TABLE IF EXISTS `#__joomlawatch_blocked`;
			</query>
			
			<query>
				CREATE TABLE `#__joomlawatch_blocked` (
				`id` int auto_increment primary key,
				`ip` varchar(255) default NULL,
				`hits` int default NULL
				);
			</query>

			<query>
				ALTER TABLE `#__joomlawatch_blocked` ADD INDEX ( `ip` );
			</query>

		</queries>
	</install>

